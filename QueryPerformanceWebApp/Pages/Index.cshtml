@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>Query Performance</h1>

<div>
    <button id="startButton">Start Queries</button>
    <div id="progressBar" style="width: 100%; background-color: #f3f3f3;">
        <div id="progress" style="width: 0%; height: 30px; background-color: #4caf50;"></div>
    </div>
    <p id="status"></p>
</div>

<div id="results" style="display:none;">
    <h2>Results</h2>
    <canvas id="performanceChart" width="400" height="200"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.getElementById('startButton').addEventListener('click', async () => {
        document.getElementById('status').innerText = "Running queries...";
        document.getElementById('results').style.display = "none";
        document.getElementById('progress').style.width = '0%';

        const response = await fetch('/run-queries');
        const data = await response.json();

        for (let i = 0; i <= 100; i += 10) {
            setTimeout(() => {
                document.getElementById('progress').style.width = `${i}%`;
            }, i * 100);
        }

        document.getElementById('results').style.display = "block";

        const taskNames = data.map(result => result.taskName);
        const elapsedTimes = data.map(result => result.elapsedMilliseconds);

        const ctx = document.getElementById('performanceChart').getContext('2d');
        const performanceChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: taskNames,
                datasets: [{
                    label: 'Execution Time (ms)',
                    data: elapsedTimes,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>
